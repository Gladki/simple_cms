<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Simple CMS | <%= @page_title || 'Admin Area' %></title>
    <%= stylesheet_link_tag('application', 'subjects' , :media => 'all') %>
    <%= javascript_include_tag('https://www.google.com/jsapi')%> 
    <script type="text/javascript">
      google.load('visualization', '1', {packages: ['corechart', 'table']});
       google.setOnLoadCallback(drawVisualization);
    </script>
<script type="text/javascript" >
 var dataTable = google.visualization.arrayToDataTable([
 ['ID Pracownika',   'Efektywność', 'Efektywność min' , 'Efektywność max', 'Poziom realizacji celu'],
 <% @workers.each do |worker| %> 
    [
      '<%= worker.id_worker %>',
   

        <% worker.effectivenes.each do |effe| %>
        <%=effe.effectivity %>, 
        <%= effe.effectivity_min %>,
        <%= effe.effectivity_max %>,
        <%=  (effe.effectivity - effe.effectivity_min) /(effe.effectivity_max - effe.effectivity_min) %> ],
        <% end %>
        <% end %>
])

</script>


    <%= javascript_include_tag :defaults ,'effectivity-graph'%> 
  
    <meta name="author" content="Aleksander Gładysz">


  </head>
  <body>
    <div id="header">
      <h1>Aplikacja Omninom </h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      
    </div>
  </body>
</html>

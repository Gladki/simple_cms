<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Aplikacja - <%= yield(:title) || "Aplikacja" %></title>
    
    <%= stylesheet_link_tag('worker', 'token-input-facebook') %>
     <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "jquery-ui-1.10.2.custom.js" %>


    <%= javascript_include_tag :application, "moment.js", "jquery.tokeninput" %>
     <%= stylesheet_link_tag "jquery-ui-1.10.2.custom.css" %>

    <meta name="author" content="Aleksander Gładysz">
<script>

  $(function() {


     $( "#date_from_div" ).datepicker({
      defaultDate: "-1w",
      changeMonth: true,
      changeMonth: false,
      closeText: 'Zamknij',
      prevText: '&#x3c;Poprzedni',
      nextText: 'Następny&#x3e;',
      currentText: 'Dziś',
      monthNames: ['Styczeń','Luty','Marzec','Kwiecień','Maj','Czerwiec',
      'Lipiec','Sierpień','Wrzesień','Październik','Listopad','Grudzień'],
      monthNamesShort: ['Sty','Lu','Mar','Kw','Maj','Cze',
      'Lip','Sie','Wrz','Pa','Lis','Gru'],
      dayNames: ['Niedziela','Poniedziałek','Wtorek','Środa','Czwartek','Piątek','Sobota'],
      dayNamesShort: ['Nie','Pn','Wt','Śr','Czw','Pt','So'],
      dayNamesMin: ['N','Pn','Wt','Śr','Cz','Pt','So'],
      numberOfMonths: 1,
      showAnim: "slide",
      altField: "#search_date_from",
      altFormat: "dd-mm-yy",



    });
$( "#date_to_div" ).datepicker({
      defaultDate: "today",
      changeMonth: true,
      changeMonth: false,
      closeText: 'Zamknij',
      prevText: '&#x3c;Poprzedni',
      nextText: 'Następny&#x3e;',
      currentText: 'Dziś',
      monthNames: ['Styczeń','Luty','Marzec','Kwiecień','Maj','Czerwiec',
      'Lipiec','Sierpień','Wrzesień','Październik','Listopad','Grudzień'],
      monthNamesShort: ['Sty','Lu','Mar','Kw','Maj','Cze',
      'Lip','Sie','Wrz','Pa','Lis','Gru'],
      dayNames: ['Niedziela','Poniedziałek','Wtorek','Środa','Czwartek','Piątek','Sobota'],
      dayNamesShort: ['Nie','Pn','Wt','Śr','Czw','Pt','So'],
      dayNamesMin: ['N','Pn','Wt','Śr','Cz','Pt','So'],
      numberOfMonths: 1,
      showAnim: "slide",
      altField: "#search_date_to",
      altFormat: "dd-mm-yy",



    });
  


    // $( "#search_date_to" ).datepicker({
    //   defaultDate: "+1w",
    //   changeMonth: true,
    //   numberOfMonths: 1,
    //   showAnim: "slide"
    // });
            $( "#timestamp" ).buttonset();
            $( "#radio1" ).click(function(){
              var val = $("#search_date_to").val();
              var curr_date = Date.parse(val);
              curr_date = curr_date.setDate(curr_date.getDate() - 90);
              curr_date = moment(curr_date).format("DD-MM-YYYY");
              $("#search_date_from").val(curr_date);

            });

             $( "#radio2" ).click(function(){
              var val = $("#search_date_to").val();
              var curr_date = Date.parse(val);
              curr_date = curr_date.setDate(curr_date.getDate() - 30);
              curr_date = moment(curr_date).format("DD-MM-YYYY");
              $("#search_date_from").val(curr_date);

            });
               $( "#radio3" ).click(function(){
              var val = $("#search_date_to").val();
              var curr_date = Date.parse(val);
              curr_date = curr_date.setDate(curr_date.getDate() - 7);
              curr_date = moment(curr_date).format("DD-MM-YYYY");
              $("#search_date_from").val(curr_date);

            });
  });


  </script>


  </head>
  <body>
    <div class="header-pipe-bar">
      <% if current_user %>

        <div id="navigation">
        <ul>
            Witaj: <%= current_user.login.humanize %>.
            
            <% if permitted_to? :szczegoly, :workers %>
            <li><%= link_to "Dashboard", szczegoly_po_id_path(current_user.id) %></li>
            <% end %>


          <% if permitted_to? :new, :searches %>
          <li><%= link_to "Szukaj pracownika", nowe_szukanie_path %></li>
          <% end %>
          <% if permitted_to? :calendar, :effectivenes %>
          
          <li><%= link_to "Kalendarz", effectivenes_calendar_path %></li>
          <% end %>
        
         
          <% if permitted_to? :new, :workers %>

          <li><%= link_to "Dodaj nowego pracownika", nowy_pracownik_path %></li>
          <% end %>
        
         

          <% if permitted_to? :lista, :workers %>
            <li><%= link_to "Lista pracowników", lista_pracownikow_path %></li>
          <% end %>
          <% if permitted_to? :index, :tabelanormatywows %>
            <li><%= link_to "Tabela normatywów", tabela_normatywow_path %></li>
          <% end %> 
           <% if permitted_to? :index, :tabelatransportowas %>
            <li><%= link_to "Tabela transportowa", tabela_transportowa_path %></li>
          <% end %>
          <% if permitted_to? :index, :typyczynnoscis %>
            <li><%= link_to "Typy czynności", typy_czynnosci_path %></li>
          <% end %>
          <% if permitted_to? :import_render, :workers %>
            <li><%= link_to "Import danych", import_danych_path %></li>
          <% end %>

          <% if permitted_to? :index, :pomocniczes %>
            <li><%= link_to "Pomocnicze Dane", pomocnicze_path %></li>
          <% end %>
           

           <%= link_to "Wyloguj", wyloguj_path %>


      <% else %>
      <%= link_to "Zarejestruj", rejestruj_path %> or
      <%= link_to "Zaloguj",  zaloguj_path %>
      <% end %>
        </ul>
      </div>
     
     
    </div>

    
      <div id="content">
        <div id="container">
          
     
     <% if !flash[:notice].blank? %>
      <div class="notice">
         
        <%= flash[:notice] %>
      </div>

      <% end %>


        <%= yield %>
      </div>
         </div>

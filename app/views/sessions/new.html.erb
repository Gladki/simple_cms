<div id="logo">
<%= link_to image_tag("logo_onn.png", :border => 0), root_path %>
</div>


<div class="login">
<h1>Logowanie do systemu</h1>
<div class="flash-message">
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %><br/>
</div>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag "Nazwa użytkownika" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag "Hasło" %><br />
    <%= password_field_tag :password %>
  </p>
    <%= submit_tag("", :class=>"logon") %>
<% end %>

<div class="links">
    <%= link_to "Rejestruj", rejestruj_path %> 
    <!-- <%= link_to "Przypomnij hasło", zaloguj_path %> -->
</div>
</div>
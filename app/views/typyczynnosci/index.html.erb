<% title "Tabela czynnosci" %>

<div class="section list">
  <h1>Tabela Normatywów</h1>
</div>
 <br/>
<p>
<b>Pobierz listę w formacie: 
<%= button_to("Excel (.xls)" , export_czynnosci_path(format: "xls"), :class => "szczegoly") %>

</b>
</p>
<br/>
<table style="font-size:11px;border-width: 1px;
  border-spacing: 2px;
  border-style: hidden;
  border-color: #000;
  border-collapse: collapse;
  text-align:center;
  " border="1"class="listing" summary="Section list">
    <tr class="header">
      <th>Kod<br/>Czynności</th>
      <th>Opis</th>
    
      <th>Pochodzenie</th>
      <th>Data utworzenia</th>
    </tr>
 <% @czynnosci.each do |czynnosc| %>
 <tr >
 
      <td><%= czynnosc.tc_kod %></td>
      <td><%= czynnosc.tc_opis %></td>
     
      <td style="width:100px;"><%= czynnosc.tc_zrodlo_pochodzenia %></td>
      <td><%= czynnosc.created_at.strftime("%d-%m-%Y") %></td>
   
      </tr>
          
     <% end %>
   </table>

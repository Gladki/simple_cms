<% title "Tabela Normatywów" %>

<div class="section list">
  <h1>Tabela Normatywów</h1>
</div>
 <br/>
<p>
<b>Pobierz listę w formacie: 
<%= button_to("Excel (.xls)" , lista_pracownikow_path(format: "xls"), :class => "szczegoly") %>

</b>
</p>
<br/>
<table class="listing" summary="Section list">
    <tr class="header">
      <th>Kod<br/>Czynności</th>
      <th>Obszar</th>
      <th>Opis czynności</th>
      <th>Dodatkowy opis czynności</th>
      <th>Jednostka<br/>odniesienia</th>
      <th>Czas[s]</th>
      <th>Czas[min]</th>
      <th>Komentarz</th>
      <th>Pochodzenie</th>
      <th>Data utworzenia</th>
    </tr>
 <% @normatywy.each do |normatyw| %>
 <tr>
 
      <td><%= normatyw.tn_kod_czynnosci %></td>
      <td><%= normatyw.tn_obszar %></td>
      <td><%= normatyw.tn_opis_czynnosci %></td>
      <td><%= normatyw.tn_opis_czynnosci_szczegolowy %></td>
      <td><%= normatyw.tn_jednostka_odniesienia %></td>
      <td><%= normatyw.tn_czas %></td>
      <td><%= normatyw.tn_czas/60 %></td>
      <td><%= normatyw.tn_komentarz %></td>
      <td><%= normatyw.tn_import_file_info %></td>
      <td><%= normatyw.created_at %></td>
   <!--    
      
      <td><%= button_to("szczegóły", szczegoly_po_id_path(worker.id), :class=>"szczegoly" ) %></td>
      
      <% if permitted_to? :delete, :workers %>
        <td><%= button_to("usuń", usun_po_id_path(worker.id), :class=>"szczegoly" ) %></td>
      <% end %>

 -->
      </tr>
          
     <% end %>
   </table>

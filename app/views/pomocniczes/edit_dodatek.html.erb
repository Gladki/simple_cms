 <% title "Edycja dodatku nr. #{params[:id]}" %>

 <div id="1" class="middle-content">
    
 
  <h1>Edycja dodatku nr. <%= "#{params[:id]}" %></h1>
<div id="insert" style="width:400px; float:left; margin:0; padding:20px 0;">

<%= form_for @dodatek do |f| %>
  <table summary="Section form fields">
  <tr>
    <th><%= f.label :do_rodzaj_wozka, "Rodzaj wózka: " %></th>
    <td><%= f.text_field :do_rodzaj_wozka %></td>
  </tr>
  <tr>
    <th><%= f.label :do_opis, "Opis dodatku: " %></th>
    <td><%= f.text_field :do_opis %></td>
  </tr>
  <tr>
    <th><%= f.label :do_kod, "Kod dla prędkości: " %></th>
    <td><%= f.select(:do_kod, options_for_select([
      ['czołowy', 'czołowy'], 
      ['systemowy', 'systemowy'], 
      ['retrak', 'retrak'], 
      ['ręczny', 'ręczny'], 
      ['piesek', 'piesek'], 
      ['paleciak', 'paleciak'], 
      ['transportowy', 'transportowy'], 
      ['ciągnik', 'ciągnik'], 
      ['pieszo', 'pieszo']], 
      
      1) ) %></td>
  </tr>
  <tr>
    <th><%= f.label :do_czas_zakr, "Czas zakrętu w [sek/1zakr]: " %></th>
    <td><%= f.text_field :do_czas_zakr, :placeholder => '0.0' %></td>
  </tr>
  <tr>
    <th><%= f.label :do_czas_start_stop,  "Czas start/stop w [sek/1zakr]: " %></th>
    <td><%= f.text_field :do_czas_start_stop, :placeholder => '0.0' %></td>
  </tr>
 
  <tr><td>
    <%= f.hidden_field :do_aud_us_id, :value => current_user.id %>
    </td>
    </tr>


</table>
     <%= submit_tag("" , :class => "add", :remote => true) %>

    
  <% end %>
</div>
</div>

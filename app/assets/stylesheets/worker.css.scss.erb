$gray: #efefef;
$black: #000;
$blue:#0000ff;
$red: #ff0000;
$light-blue:#00FFFF;
$white: #fff;
@font-face
{
font-family:Helvetica Neue Light;
src:url(HelveticaNeueLTPro-Lt.otf);
}
@font-face
{
font-family:Helvetica Neue Pro;
src:url(HelveticaNeueLTPro-Cn.otf);
}

html { width: 100%; }
body {
	width: 100%;
	font-family: Helvetica Neue Pro;
	margin: 0; padding: 0;
	background-image: url(<%= asset_path('gray_jean.png') %>);
}

@mixin rounded-corners($radius) {
  border-radius: $radius;
  -moz-border-radius: $radius;
  -webkit-border-radius: $radius;
}
@mixin transition($value, $type){
	-webkit-transition:  $value $type;
	   -moz-transition:  $value $type;
		-ms-transition:  $value $type;
	  	 -o-transition:  $value $type;
		 	transition:  $value $type;

}
.header-pipe-bar {
width:100%;
margin: 0;
background-color: #eaeaea;
box-shadow: 2px 2px 5px 0 #000;
position: fixed;
margin-top: -60px;
padding:10px 30px;
height:20px;
	z-index: 2;

}
#navigation ul { list-style: none; margin: 0; padding: 0; 
	li {
	font-weight: bold; margin-bottom: 0.5em; display: inline-block;
	vertical-align: top;
	zoom: 1; /* Fix for IE7 */
	*display: inline; /* Fix for IE7 */ 
 	}
	ul { margin: 0.5em 0 0 1em; font-size: 0.9em; }
	a { 
		@include transition(.50s, ease-in-out);
        text-decoration: none; padding: 1px 7px;
    
	&:hover { background: #F2DC87; padding:7px; }
	&:visited { color:gray; }
	}	

}

#content {
	margin:60px auto;
	width:1000px;
	padding:10px 25px 10px 25px;
	height:auto;
	background-color: $gray;
	box-shadow: 0px 0px 5px 3px hsla(0,0%,0%,.20);
	h1 {

		font-size: 18px;
		border-bottom: 1px solid darken($gray, 15%);
	}
}
